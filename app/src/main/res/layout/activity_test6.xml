<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. ¿Cómo te sientes cuando estás en una multitud?"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Ansioso" />

                <RadioButton
                    android:id="@+id/t6RadioButton1B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Energizado" />

                <RadioButton
                    android:id="@+id/t6RadioButton1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Neutrale" />

                <RadioButton
                    android:id="@+id/t6RadioButton1D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Incómodo" />
            </RadioGroup>

            <!-- Pregunta 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. ¿Prefieres trabajar solo o en equipo?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Solo" />

                <RadioButton
                    android:id="@+id/t6RadioButton2B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) En equipo" />

                <RadioButton
                    android:id="@+id/t6RadioButton2C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Depende de la situación" />

                <RadioButton
                    android:id="@+id/t6RadioButton2D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) No tengo preferencia" />
            </RadioGroup>

            <!-- Pregunta 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. ¿Cómo manejas el estrés?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton3A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Ejercicio" />

                <RadioButton
                    android:id="@+id/t6RadioButton3B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Meditación" />

                <RadioButton
                    android:id="@+id/t6RadioButton3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Hablar con amigos" />

                <RadioButton
                    android:id="@+id/t6RadioButton3D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Ignorándolo" />
            </RadioGroup>

            <!-- Pregunta 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. ¿Qué haces cuando te enfrentas a un problema difícil?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton4A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Lo analizo detenidamente" />

                <RadioButton
                    android:id="@+id/t6RadioButton4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Pido ayuda" />

                <RadioButton
                    android:id="@+id/t6RadioButton4C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Me estreso" />

                <RadioButton
                    android:id="@+id/t6RadioButton4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Lo evito" />
            </RadioGroup>

            <!-- Pregunta 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. ¿Cómo describes tu nivel de organización?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton5A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy organizado" />

                <RadioButton
                    android:id="@+id/t6RadioButton5B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Moderadamente organizado" />

                <RadioButton
                    android:id="@+id/t6RadioButton5C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco organizado" />

                <RadioButton
                    android:id="@+id/t6RadioButton5D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Desorganizado" />
            </RadioGroup>

            <!-- Pregunta 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. ¿Qué tan importante es para ti la rutina diaria?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton6A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton6B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton6C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) No muy importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton6D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>

            <!-- Pregunta 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. ¿Eres más emocional o racional en tus decisiones?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton7A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Emocional" />

                <RadioButton
                    android:id="@+id/t6RadioButton7B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Racional" />

                <RadioButton
                    android:id="@+id/t6RadioButton7C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Ambos por igual" />

                <RadioButton
                    android:id="@+id/t6RadioButton7D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Depende de la situación" />
            </RadioGroup>

            <!-- Pregunta 8 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. ¿Cómo te sientes al tomar riesgos?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton8A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Me gusta" />

                <RadioButton
                    android:id="@+id/t6RadioButton8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) No me gusta" />

                <RadioButton
                    android:id="@+id/t6RadioButton8C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Depende del riesgo" />

                <RadioButton
                    android:id="@+id/t6RadioButton8D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Lo evito a toda costa" />
            </RadioGroup>

            <!-- Pregunta 9 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. ¿Qué tan fácil te resulta confiar en los demás?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton9A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy fácil" />

                <RadioButton
                    android:id="@+id/t6RadioButton9B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Moderadamente fácil" />

                <RadioButton
                    android:id="@+id/t6RadioButton9C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Difícil" />

                <RadioButton
                    android:id="@+id/t6RadioButton9D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Muy difícil" />
            </RadioGroup>

            <!-- Pregunta 10 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10. ¿Qué tan importante es para ti la aprobación de los demás?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t6RadioGroupQuestion10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t6RadioButton10A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton10B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton10C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) No muy importante" />

                <RadioButton
                    android:id="@+id/t6RadioButton10D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>


            <Button
                android:id="@+id/t6BotonEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enviar" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>