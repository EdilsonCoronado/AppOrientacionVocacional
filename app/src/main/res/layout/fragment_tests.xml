<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sección 1 -->
    <LinearLayout
        android:id="@+id/container_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="onTestButtonClick">

        <ImageView
            android:id="@+id/iconTest1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_test1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/titleTest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_titulo_test1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_descripcion_test1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

