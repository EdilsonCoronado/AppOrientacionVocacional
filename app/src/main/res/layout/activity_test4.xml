<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test4Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. ¿Qué tan importante es la honestidad en tu vida?"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton1B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton1D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>

            <!-- Pregunta 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. ¿Cómo valoras la empatía hacia los demás?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy alta" />

                <RadioButton
                    android:id="@+id/t4RadioButton2B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Alta" />

                <RadioButton
                    android:id="@+id/t4RadioButton2C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Moderada" />

                <RadioButton
                    android:id="@+id/t4RadioButton2D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Baja" />
            </RadioGroup>

            <!-- Pregunta 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. ¿Te consideras una persona justa en tus decisiones?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton3A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Siempre" />

                <RadioButton
                    android:id="@+id/t4RadioButton3B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Casi siempre" />

                <RadioButton
                    android:id="@+id/t4RadioButton3C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) A veces" />

                <RadioButton
                    android:id="@+id/t4RadioButton3D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Rara vez" />
            </RadioGroup>

            <!-- Pregunta 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. ¿Qué tan importante es para ti la responsabilidad social?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton4A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton4C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>

            <!-- Pregunta 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. ¿Cómo manejas los conflictos éticos en tu vida?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton5A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Con firmeza y claridad" />

                <RadioButton
                    android:id="@+id/t4RadioButton5B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Con dudas" />

                <RadioButton
                    android:id="@+id/t4RadioButton5C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Con dificultad" />

                <RadioButton
                    android:id="@+id/t4RadioButton5D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Los evito" />
            </RadioGroup>

            <!-- Pregunta 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. ¿Qué valoras más: el éxito personal o el bienestar común?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton6A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Éxito personal" />

                <RadioButton
                    android:id="@+id/t4RadioButton6B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Bienestar común" />

                <RadioButton
                    android:id="@+id/t4RadioButton6C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Ambos por igual" />

                <RadioButton
                    android:id="@+id/t4RadioButton6D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Ninguno en particular" />
            </RadioGroup>

            <!-- Pregunta 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. ¿Qué tan importante es la transparencia en tus relaciones personales y profesionales?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton7A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton7B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton7C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton7D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>

            <!-- Pregunta 8 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. ¿Cómo reaccionas ante las injusticias que observas?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton8A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Actúo inmediatamente" />

                <RadioButton
                    android:id="@+id/t4RadioButton8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Reflexiono antes de actuar" />

                <RadioButton
                    android:id="@+id/t4RadioButton8C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) A veces actúo, a veces no" />

                <RadioButton
                    android:id="@+id/t4RadioButton8D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) No hago nada" />
            </RadioGroup>

            <!-- Pregunta 9 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. ¿Qué tan comprometido estás con la igualdad de derechos para todos?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton9A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy comprometido" />

                <RadioButton
                    android:id="@+id/t4RadioButton9B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo comprometido" />

                <RadioButton
                    android:id="@+id/t4RadioButton9C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco comprometido" />

                <RadioButton
                    android:id="@+id/t4RadioButton9D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada comprometido" />
            </RadioGroup>

            <!-- Pregunta 10 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10. ¿Qué tan importante es para ti el respeto hacia las diferencias culturales y sociales?"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <RadioGroup
                android:id="@+id/t4RadioGroupQuestion10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/t4RadioButton10A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a) Muy importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton10B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="b) Algo importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton10C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="c) Poco importante" />

                <RadioButton
                    android:id="@+id/t4RadioButton10D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d) Nada importante" />
            </RadioGroup>


            <Button
                android:id="@+id/t4BotonEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enviar" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>